<div class="repo-grid">
  <% if (repos && repos.length) { %>
    <% repos.forEach(repo => { %>
      <%- include('../modules/card', { repo }) %>
    <% }) %>
  <% } else { %>
    <p>No repositories found.</p>
  <% } %>
</div>
<style>
  .repo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }
  @media (max-width: 600px) {
    .repo-grid {
      grid-template-columns: 1fr;
    }
  }
</style>